<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            style="@style/JiraSubLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_name" />
        <EditText
            android:id="@+id/editTextFilterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
            <requestFocus android:layout_width="wrap_content" />
        </EditText>
        <TextView
            style="@style/JiraSubLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/filter_description" />
        <EditText
            android:id="@+id/editTextFilterDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
        <TextView
            style="@style/JiraSubLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/jql" />
        <EditText
            android:id="@+id/editTextFilterJQL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >
            <TextView
                style="@style/JiraSubLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/is_favorite" />
            <ImageButton
                android:id="@+id/imageButtonFilterIsFavorite"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:background="@null"
                android:src="@drawable/like" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>